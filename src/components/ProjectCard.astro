---
interface Props {
  title: string;
  description: string;
  link?: string;
  tags?: string[];
}

const { title, description, link, tags = [] } = Astro.props;
---

<div class="bg-white border border-gray-200 rounded-lg p-6 hover:shadow-lg transition-shadow">
  <h3 class="text-xl font-bold text-gray-900 mb-3">
    {link ? (
      <a href={link} class="hover:text-teal-500 transition-colors" target="_blank" rel="noopener noreferrer">
        {title}
      </a>
    ) : (
      title
    )}
  </h3>
  <p class="text-gray-600 mb-4 leading-relaxed">
    {description}
  </p>
  {tags.length > 0 && (
    <div class="flex flex-wrap gap-2">
      {tags.map((tag) => (
        <span class="px-3 py-1 bg-teal-50 text-teal-600 text-sm rounded-full">
          {tag}
        </span>
      ))}
    </div>
  )}
</div>
